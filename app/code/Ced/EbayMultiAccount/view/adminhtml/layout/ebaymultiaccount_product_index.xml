<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Magento_Catalog::catalog_products</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="page.main.actions">
            <block class="Ced\EbayMultiAccount\Block\Adminhtml\Accounts\Switcher" name="account_switcher" as="account_switcher">
                <arguments>
                    <argument name="use_confirm" xsi:type="string">0</argument>
                    <argument name="default_selection_name" xsi:type="string" translate="true">Primary Account</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <uiComponent name="ebaymultiaccount_product_listing"/>
            <!-- <block class="Ced\EbayMultiAccount\Block\Adminhtml\Product\Button" name="ebaymultiaccount_product_list"/> -->
        </referenceContainer>
    </body>
</page>
