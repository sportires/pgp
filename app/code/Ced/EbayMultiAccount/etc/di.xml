<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="ProfileDataGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="ProfileDataGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Ced\EbayMultiAccount\Model\Resource\Profile\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">ProfileDataGridFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="Ced\EbayMultiAccount\Model\ResourceModel\Profile\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">ebaymultiaccount_profile</argument>
            <argument name="resourceModel" xsi:type="string">Ced\EbayMultiAccount\Model\ResourceModel\Profile</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="ebaymultiaccount_profile_index_data_source" xsi:type="string">Ced\EbayMultiAccount\Model\ResourceModel\Profile\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
</config>