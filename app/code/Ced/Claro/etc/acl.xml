<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Ced_Claro::Claro" title="Claro" sortOrder="50">
                    <resource id="Ced_Claro::listing" title="Products">
                        <resource id="Ced_Claro::profile" title="Manage Profiles"/>
                        <resource id="Ced_Claro::product" title="Manage Products"/>
                    </resource>
                    <resource id="Ced_Claro::order" title="Orders">
                        <resource id="Ced_Claro::order_listing" title="Manage Orders"/>
                        <resource id="Ced_Claro::failed_order" title="Failed Orders"/>
                    </resource>
                    <resource id="Ced_Claro::developer" title="Developer">
                        <resource id="Ced_Claro::feeds" title="Feeds"/>
                        <resource id="Ced_Claro::queue" title="Queues"/>
                    </resource>

                    <resource id="Ced_Claro::settings" title="Configuration">
                        <resource id="Ced_Claro::account" title="Manage Accounts"/>
                        <resource id="Ced_Claro::configuration" title="Configuration"/>
                        <resource id="Ced_Claro::setup" title="Setup"/>
                    </resource>

                    <resource id="Ced_Claro::extras" title="Extras">
                        <resource id="Ced_Claro::knowledgebase" title="Knowledgebase"/>
                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Ced_Claro::system_config" title="Claro Configurations"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
